@model Category

<div class="row justify-content-center ">
    <div class="  col-10 col-sm-6 col-md-5 m-5">
        <div class="card shadow border-1">
            <div class="card-header bg-gradient bg-success">
                <h2 class="text-white text-center p-2">Edit Category</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    <input asp-for="Id" hidden/>
                    <div>
                        <label asp-for="Name" class="col-form-label text-success"></label>
                        <input asp-for="Name" class="form-control form-input-style" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="DisplayOrder" class="col-form-label text-success"></label>
                        <input asp-for="DisplayOrder" class="form-control form-input-style" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="row mt-3">
                        <div class="col-6 ">
                            <button type="submit" class="btn bg-gradient-right btn-hover form-control">Update</button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Category" asp-action="Index" class="btn border-dark text-dark form-control btn-transition shadow-none">Go back</a>
                        </div>
                        <div asp-validation-summary="All" class="text-danger mt-3"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}