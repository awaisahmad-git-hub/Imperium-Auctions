@page
@model ExternalLoginModel
@{
	ViewData["Title"] = "Register";
}

<p id="external-login-description" class="text-info mt-4 text-center">
	You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
	Please enter an email address for this site below and click the Register button to finish
	logging in.
</p>

<div class="row justify-content-center mb-4">
	<div class="col-md-4">
		<form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<div class="card shadow-lg">
				<div class="card-header bg-success bg-gradient text-white text-center">
					<h2 id="external-login-title">Associate your @Model.ProviderDisplayName account</h2>
				</div>
				<div class="card-body">
					<div class="form-floating mb-3">
						<input asp-for="Input.ApplicationUser.Name" class="form-control form-input-style" autocomplete="name" placeholder="Please enter your name." />
						<label asp-for="Input.ApplicationUser.Name" class="form-label text-success"></label>
						<span asp-validation-for="Input.ApplicationUser.Name" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="Input.Email" class="form-control form-input-style" autocomplete="email" placeholder="Please enter your email." />
						<label asp-for="Input.Email" class="form-label text-success"></label>
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="Input.PhoneNumber" class="form-control form-input-style" autocomplete="phone" placeholder="Please enter your phone number." />
						<label asp-for="Input.PhoneNumber" class="form-label text-success"></label>
						<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="Input.ApplicationUser.Address" class="form-control form-input-style" autocomplete="address" placeholder="Please enter your address." />
						<label asp-for="Input.ApplicationUser.Address" class="form-label text-success"></label>
						<span asp-validation-for="Input.ApplicationUser.Address" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="Input.ApplicationUser.PostalCode" class="form-control form-input-style" autocomplete="postalcode" placeholder="Please enter your postal code." />
						<label asp-for="Input.ApplicationUser.PostalCode" class="form-label text-success"></label>
						<span asp-validation-for="Input.ApplicationUser.PostalCode" class="text-danger"></span>
					</div>
					<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
					<button type="submit" class="w-100 btn btn-lg bg-gradient-right btn-hover">Register</button>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
