@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1 class="text-dark">@ViewData["Title"]</h1>
<h2 class="text-dark">Enter your email.</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <hr class="text-dark" />
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control form-input-style" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label text-success"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg bg-gradient-right btn-hover">Reset Password</button>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
