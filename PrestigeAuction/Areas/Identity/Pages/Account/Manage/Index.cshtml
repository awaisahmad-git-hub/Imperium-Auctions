@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <partial name="_StatusMessage" for="StatusMessage" />
            <div class="card shadow-lg">
                <div class="card-header bg-success bg-gradient text-white text-center">
                    <h2 class="text-white">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control form-input-style text-dark" placeholder="Please choose your username." />
                        <label asp-for="Input.Name" class="form-label text-success"></label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control form-input-style" placeholder="Please enter your phone number." />
                        <label asp-for="Input.PhoneNumber" class="form-label text-success"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg bg-gradient-right btn-hover">Save</button>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
