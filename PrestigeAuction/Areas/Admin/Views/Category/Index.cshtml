@model IEnumerable<Category>

<div class="row pt-4">
    <div class="col-5">
    </div>
    <div class="col-7 text-center pe-5">
        <a asp-controller="Category" asp-action="Create" class="btn bg-gradient-right btn-hover"><i class="bi bi-plus-circle"></i> Create Category</a>
    </div>
</div>

<div class="row justify-content-center">
    <table class="table caption-top table-bordered table-striped table-light border-dark w-50 ">
        <caption><h2 class="text-success fw-bold">Category List</h2></caption>
        <thead>
            <tr>
                <th>Category Name</th> <th>Display Order</th><th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(u=>u.Name))
            {
                <tr>
                    <td>@item.Name</td> <td>@item.DisplayOrder</td>
                    <td >
                        <div class="btn-group w-100" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn bg-gradient-right btn-hover w-50"><i class="bi bi-pencil"></i> Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger bg-gradient w-50"><i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
