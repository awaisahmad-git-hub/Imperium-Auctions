@model IEnumerable<Category>
@for (int i = 0; i < Model.Count(); i++)
{
    <tr>
        <td class="text-ellipsis">@(i + 1)</td>
        <td>@Model.ElementAt(i).Name</td>
        <td>@Model.ElementAt(i).DisplayOrder</td>
        <td>
            <div class="btn-group w-100" role="group">
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@Model.ElementAt(i).Id" class="btn bg-gradient-right btn-hover w-50">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a class="btn btn-danger bg-gradient w-50 deleteCategory" data-category-id="@Model.ElementAt(i).Id">
                    <i class="bi bi-trash3"></i> Delete
                </a>
            </div>
        </td>
    </tr>
}
