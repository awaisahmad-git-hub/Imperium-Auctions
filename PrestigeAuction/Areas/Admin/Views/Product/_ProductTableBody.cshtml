@model IEnumerable<Product>
<style>
    .text-ellipsis {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
@foreach (var item in Model)
{
    <tr>
        <td class="text-ellipsis">@item.Title</td>
        <td class="text-ellipsis">@item.Description</td>
        <td class="text-ellipsis">@item.SKU</td>
        <td class="text-ellipsis">@item.DiscountPrice</td>
        <td class="text-ellipsis">@item.Category?.Name</td>
        <td>
            <div class="btn-group w-100" role="group">
                <a asp-controller="Product" asp-action="CreateUpdate" asp-route-id="@item.Id" class="btn bg-gradient-right btn-hover">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a class="btn btn-danger bg-gradient deleteProduct" data-id="@item.Id">
                    <i class="bi bi-trash3"></i> Delete
                </a>
            </div>
        </td>
    </tr>
}
