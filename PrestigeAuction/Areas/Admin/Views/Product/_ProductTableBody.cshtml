@model IEnumerable<Product>

@for (int i = 0; i < Model.Count(); i++)
{
    <tr>
        <td class="text-ellipsis">@(i+1)</td>
        <td class="text-ellipsis">@Model.ElementAt(i).Title</td>
        <td class="text-ellipsis">@Model.ElementAt(i).Description</td>
        <td class="text-ellipsis">@Model.ElementAt(i).SKU</td>
        <td class="text-ellipsis">@Model.ElementAt(i).StartingPrice</td>
        <td class="text-ellipsis">@Model.ElementAt(i).Category?.Name</td>
        <td>
            <div class="btn-group w-100" role="group">
                <a asp-controller="Product" asp-action="CreateUpdate" asp-route-id="@Model.ElementAt(i).Id" class="btn bg-gradient-right btn-hover">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a class="btn btn-danger bg-gradient deleteProduct" data-id="@Model.ElementAt(i).Id">
                    <i class="bi bi-trash3"></i> Delete
                </a>
            </div>
        </td>
    </tr>
}
