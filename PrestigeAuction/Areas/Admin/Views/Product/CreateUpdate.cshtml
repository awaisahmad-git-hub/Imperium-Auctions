@model ProductViewModel
<style>
    .btn-hover:hover {
        color: #073642 !important;
    }
</style>
<div class="row justify-content-center">
    <div class="col-md-6 col-sm-10 col-10 m-5">
        <div class="card shadow border-1">
            <div class="card-header bg-gradient bg-success">
                <h2 class="text-dark text-center fw-bold p-2">@(Model.Product?.Id == null || Model.Product.Id == 0 ? "Create " : "Update ")Product</h2>
            </div>
            <div class="card-body mx-2">
                <div class="row">
                    <div class="col-8">
                        <form method="post" enctype="multipart/form-data">
                            @if (Model.Product != null)
                            {
                                <input asp-for="@Model.Product.Id" hidden />
                                <div>
                                    <label asp-for="@Model.Product.Title" class="col-form-label"></label>
                                    <input asp-for="@Model.Product.Title" class="form-control form-input-style" />
                                    <span asp-validation-for="@Model.Product.Title" class="text-danger"></span>
                                </div>
                                <div>
                                    <label asp-for="@Model.Product.Description" class="col-form-label"></label>
                                    <textarea asp-for="@Model.Product.Description" class="form-control form-input-style" style="height:100px"></textarea>
                                </div>
                                <div>
                                    <label asp-for="@Model.Product.SKU" class="col-form-label"></label>
                                    <input asp-for="@Model.Product.SKU" class="form-control form-input-style" />
                                    <span asp-validation-for="@Model.Product.SKU" class="text-danger"></span>
                                </div>
                                <div>
                                    <label asp-for="@Model.Product.Price" class="col-form-label"></label>
                                    <input asp-for="@Model.Product.Price" class="form-control form-input-style" />
                                    <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
                                </div>
                                <div>
                                    <label asp-for="@Model.Product.DiscountPrice" class="col-form-label"></label>
                                    <input asp-for="@Model.Product.DiscountPrice" class="form-control form-input-style" />
                                    <span asp-validation-for="@Model.Product.DiscountPrice" class="text-danger"></span>
                                </div>
                                <div class="mt-3">
                                    <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                                        <option disabled selected>--Select Category--</option>
                                    </select>
                                    <span asp-validation-for="@Model.Product.CategoryId" class="text-danger"></span>
                                </div>
                                <div>
                                    <label asp-for="@Model.Product.ProductImageList" class="col-form-label"></label>
                                    <input accept="image/*" type="file" name="files" class="form-control" multiple />
                                </div>
                                <div class="row mt-3">
                                    @if (Model.Product.Id == null || Model.Product.Id == 0)
                                    {
                                        <div class="col-6 ">
                                            <input type="submit" value="Create" class="btn btn-success form-control" />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-6 ">
                                            <input type="submit" value="Update" class="btn btn-success form-control" />
                                        </div>
                                    }
                                    <div class="col-6">
                                        <a asp-controller="Product" asp-action="Index" class="btn border form-control">Go back</a>
                                    </div>
                                    <div asp-validation-summary="All" class="mt-3 text-danger"></div>
                                </div>
                            }
                        </form>
                    </div>
                    <div id="productImages" class="col-4 mt-4">
                        <partial name="_ProductImages" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}