@model IEnumerable<Product>
<h1>Upcoming Auctions</h1>
@if (!Model.Any())
{
    <div class="text-center fs-4">
        0 Search Results
    </div>
}
@foreach (var item in Model)
{
    <div class="col-6 col-sm-6 col-md-3 p-4">

        <div class="row">
            <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@item.Id" class="text-decoration-none">
                <div class="card shadow-lg  bg-transparent clickable-card border-dark-subtle rounded px-0" style="height:300px">
                    @if (item.ProductImageList != null && item.ProductImageList.Any())
                    {
                        <img src="@item.ProductImageList.FirstOrDefault()?.ImageURL" class="card-img-top rounded bg-light" style="height:200px;object-fit:contain" />
                    }
                    else
                    {
                        <img src="https://placehold.co/300x200" class="card-img-top rounded bg-light" style="height:200px;object-fit:contain" />
                    }
                    <div class="card-body d-flex flex-column justify-content-end">
                        <div class="text-black text-center text-ellipsis text-uppercase ">
                            @item.Title
                        </div>
                        <div class=" text-center text-ellipsis">
                            @item.Description
                        </div>
                        <div class="text-black d-flex justify-content-center text-nowrap text-ellipsis">
                            <div class=" text-decoration-line-through me-1">
                                @item.Price.ToString("c", new CultureInfo("en-PK"))
                            </div>
                            <div class="ms-1">
                                @item.DiscountPrice.ToString("c", new CultureInfo("ur-PK"))
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
}
